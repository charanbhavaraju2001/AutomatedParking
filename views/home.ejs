    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <title>Home</title>
</head>

<body>
  <%- include('partials/navbar') %>
    <%- include('./partials/flash') %>
      <div class="container">
        <div class="row1">
          <% for(let slot of slots ){%>
            <div class="seat <%= slot.status =='occupied' ? 'occupied' : '' %>" id=<%=slot.slotid %>><%= slot.slotid %>
            </div>
            <% } %>
        </div>
      </div>

      <form action="/home?_method=PUT" method="POST" class="pb-5">
        <input type="text" name="slotid" value="" id="text" required="true">
        <center>
          <button class="btn btn-outline-primary btn-lg px-4  mb-5" id="book">Book</button>
        </center>
      </form>


      <%- include('./partials/parkinglegend.ejs') %>

        <script src="script.js"></script>
        <script src="socket.js"></script>
</body>

</html>