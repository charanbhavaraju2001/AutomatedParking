  <title>Home</title>
</head>

<body>
  <%- include('partials/navbar') %>
    <div class="container">
      <div class="row1">
        <% for(let slot of slots ){%>
          <div class="seat <%= slot.status =='occupied' ? 'occupied' : '' %>" id=<%=slot.slotid %>><%= slot.slotid %>
          </div>
          <% } %>
      </div>
    </div>


    <form action="/home?_method=PUT" method="POST">
      <input type="text" name="slotid" value="" id="text">
      <center>
        <button class="btn btn-outline-primary btn-lg">Book</button>
      </center>
    </form>

    <script src="script.js"></script>
</body>

</html>